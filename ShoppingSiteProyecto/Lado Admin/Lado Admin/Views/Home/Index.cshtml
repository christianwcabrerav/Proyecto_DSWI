@model Proyecto_Ecom_v01.Models.Home.HomeIndexViewModel
   @*@using PagedList;
    @using PagedList.Mvc;*@
@{
    ViewBag.Title = "Home Page";
}

<div id="themeSlider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
        <li data-target="#themeSlider" data-slide-to="1"></li>
        <li data-target="#themeSlider" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Imagenes/acer-logo.jpg" alt="First slide">
            <div class="carousel-caption">
                <h3>Nuevo</h3>

            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Imagenes/asus-1616.jpg" alt="Second slide">
            <div class="carousel-caption">
                <h3>Laptops</h3>

            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Imagenes/logitech-logo.jpg" alt="Third slide">
            <div class="carousel-caption">
                <h3>Accesorios</h3>

            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#themeSlider" data-slide="prev">
        <span class="fa fa-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#themeSlider" data-slide="next">
        <span class="fa fa-chevron-right"></span>
    </a>

</div>
<div class="olContent f1"><h2 style="color:black">Buscar Producto/Categoría</h2></div>
<form method="post">
<div class="olSearch fr">
    <input type="text" name="search" placeholder="Enter Keyword" class="inputComn form-control" />
    <div class="searchIcon">
        <button type="submit" class="searchBtn">
            <img src="~/Imagenes/searchIcon.png" />
        </button>
    </div>
</div>
</form>


<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Nuestros Productos <small>productos más novedosos</small></h2>
        </div>
    </div>
</div>

<div class="row product-container">
    @foreach (var item in Model.ListOfProducts)
    {
        <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
            <div class="thumbnail product-item" style="height:300px">

                <img class="img-responsive" title="Click para ver detalles del producto"
                     style="cursor:pointer;height:160px;width:100%"
                     src="~/ProductImg/@item.ProductImage" />


                <div class="caption">
                    <h5>@item.ProductName</h5>
                    <p>@item.Price S/</p>
                    <p>
                        @if (item.Quantity > 0)
                        {
                            using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductId, url = "Index" }, FormMethod.Post))
                            {
                                <button type="submit" class="pull-right"><i class="fa fa-shopping-cart"></i></button>
                            }
                        <p>Disponible</p>
                    }
                    else
                    {
                        <p>No Disponible</p>
                    }
                        </p>
                        <div class="product-item-badge">
                            @if (item.IsFeatured == true)
                            {
                                <p>Nuevo</p>

                            }
                            else
                            {
                                <p>En stock</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }


